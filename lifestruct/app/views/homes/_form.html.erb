<%= bootstrap_form_for(:goal) do |f| %>
  <%= f.text_field :title, class: 'span4' %>
  <%= f.text_area :description, class: 'span4', :cols => "20", :rows => "6", placeholder: "Describe the goal..." %>
  <%= f.datetime_select :deadline %>
  <%= f.hidden_field :parent_id %>
  <%= f.submit "Create", class: 'btn btn-primary', style: 'float: right;' %>
<% end %>